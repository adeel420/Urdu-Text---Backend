# Backend Configuration
PORT=4000
NODE_ENV=development

# MongoDB Configuration (Optional - for history feature)
MONGODB_URI=mongodb://localhost:27017/urdu-tts
# Or use MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/urdu-tts

# TTS Configuration
TTS_ENGINE=sapi
MAX_TEXT_LENGTH=5000

# Audio Configuration
AUDIO_FORMAT=wav
AUDIO_QUALITY=high